<main class="container mx-auto my-4 px-5">
  <div class="header flex">
    <h1 class="text-5xl mb-3">Quotes</h1>
    <%= link_to "New quote",
                new_quote_path,
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right h-10 ml-auto my-auto" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
    <%= render @quotes %>
  </div>
</main>
