<%= turbo_stream_from "quotes" %>

<main class="container mx-auto my-4 px-5">
  <div class="header flex">
    <h1 class="text-5xl mb-3">Quotes</h1>
    <%= link_to "New quote",
                new_quote_path,
                data: { turbo_frame: dom_id(Quote.new) },
                class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded float-right h-10 ml-auto my-auto" %>
  </div>

  <%= turbo_frame_tag dom_id(Quote.new) %>

  <%= turbo_frame_tag "quotes" do %>
    <%= render @quotes %>
  <% end %>
</main>
