<main class="container mx-auto my-4 px-5 bg-slate-200 p-4 rounded">
  <div class="header flex">
    <h1 class="text-4xl mb-5">New quote</h1>
    <%= link_to sanitize("&larr; Back to quotes"), quotes_path,
                class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded float-right h-10 ml-auto my-auto" %>
  </div>

  <%= turbo_frame_tag @quote do %>
    <%= render "form", quote: @quote %>
  <% end %>
</main>
